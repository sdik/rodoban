 <aside id="logo-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen pt-20 transition-transform -translate-x-full bg-white shadow-lg sm:translate-x-0" aria-label="Sidebar">
   <div class="h-full px-3 pb-4 overflow-y-auto bg-white">
      <ul class="space-y-2 font-medium">
         <!-- Dashboard -->
         <li>
            <%= link_to root_path, class: "flex items-center p-3 text-gray-900 rounded-lg hover:bg-blue-50 group #{current_page?(root_path) ? 'bg-blue-50' : ''}" do %>
               <div class="flex-shrink-0 w-5 h-5 text-blue-500 transition duration-75 group-hover:text-blue-600">
                  <i class="fas fa-gauge"></i>
               </div>
               <span class="ms-3 font-medium">Dashboard</span>
            <% end %>
         </li>

         <!-- Cadastros -->
         <li>
            <button type="button" class="flex items-center w-full p-3 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-blue-50" aria-controls="dropdown-cadastros" data-collapse-toggle="dropdown-cadastros">
               <div class="flex-shrink-0 w-5 h-5 text-blue-500 transition duration-75 group-hover:text-blue-600">
                  <i class="fas fa-users"></i>
               </div>
               <span class="flex-1 ms-3 text-left whitespace-nowrap font-medium">Cadastros</span>
               <i class="fas fa-chevron-down w-3 h-3 text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
            </button>
            <ul id="dropdown-cadastros" class="py-2 space-y-1">
               <li>
                  <%= link_to clients_path, class: "flex items-center w-full p-2 text-gray-700 transition duration-75 rounded-lg pl-11 group hover:bg-blue-50 #{current_page?(clients_path) ? 'bg-blue-50 text-blue-600' : ''}" do %>
                     <span class="font-medium">Clientes</span>
                  <% end %>
               </li>
            </ul>
         </li>

         <!-- Movimentos -->
         <li>
            <button type="button" class="flex items-center w-full p-3 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-blue-50" aria-controls="dropdown-movimentos" data-collapse-toggle="dropdown-movimentos">
               <div class="flex-shrink-0 w-5 h-5 text-blue-500 transition duration-75 group-hover:text-blue-600">
                  <i class="fas fa-truck"></i>
               </div>
               <span class="flex-1 ms-3 text-left whitespace-nowrap font-medium">Movimentos</span>
               <i class="fas fa-chevron-down w-3 h-3 text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
            </button>
            <ul id="dropdown-movimentos" class="py-2 space-y-1">
               <li>
                  <a href="#" class="flex items-center w-full p-2 text-gray-700 transition duration-75 rounded-lg pl-11 group hover:bg-blue-50">
                     <span class="font-medium">Coleta</span>
                  </a>
               </li>
               <li>
                  <a href="#" class="flex items-center w-full p-2 text-gray-700 transition duration-75 rounded-lg pl-11 group hover:bg-blue-50">
                     <span class="font-medium">Outros</span>
                  </a>
               </li>
            </ul>
         </li>
      </ul>
   </div>
</aside>

