<div class="mx-auto max-w-screen-2xl p-4 md:p-6 2xl:p-10">
  <div class="rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark p-4">
    <h2 class="text-2xl font-bold mb-4">Teste do Stimulus</h2>
    
    <!-- Test Stimulus -->
    <div data-controller="hello" class="mb-4">
      <button data-action="click->hello#greet" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Testar Stimulus
      </button>
      <div data-hello-target="output" class="mt-2 text-lg"></div>
    </div>

    <!-- Test Accordion -->
    <div data-controller="accordion" class="mt-4">
      <button data-action="accordion#toggle" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded flex items-center">
        <span>Testar Accordion</span>
        <svg class="accordion-icon transition-transform duration-200 ml-2" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1.41 0.590088L6 5.17009L10.59 0.590088L12 2.00009L6 8.00009L0 2.00009L1.41 0.590088Z" fill="#fff"/>
        </svg>
      </button>
      <div data-accordion-target="submenu" class="hidden mt-2 p-4 bg-gray-100 rounded">
        Conteúdo do accordion está funcionando!
      </div>
    </div>

    <!-- Test Mask -->
    <div data-controller="mask" class="mt-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        Teste Máscara (CPF)
      </label>
      <input type="text" data-mask-target="input" id="test_cpf" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Digite um CPF">
    </div>
  </div>
</div>
